{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "assets/**", "use": "@vercel/static" },
    { "src": "partials/**", "use": "@vercel/static" },
    { "src": "*.{html,css,js,png,jpg,jpeg,gif,svg,ico,pdf,mp4,webm,woff,woff2,ttf}", "use": "@vercel/static" }
  ],
  "headers": [
    {
      "source": "/assets/(.*)\\.(css|js|png|jpg|jpeg|gif|svg|ico|pdf|mp4|webm|woff|woff2|ttf)$",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/assets/data/site.json",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache" }
      ]
    },
    {
      "source": "/partials/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache" }
      ]
    }
  ]
}